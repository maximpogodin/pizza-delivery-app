<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="25dp"
    android:paddingTop="75dp"
    android:paddingEnd="25dp"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/order_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="№ заказа"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textAlignment="textStart"
        android:layout_marginBottom="50dp"/>
    <TextView
        android:id="@+id/creation_datetime_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создан:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Состав заказа:"
            android:textSize="24sp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/order_items_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/order_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Текущий статус"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/order_sum_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумма заказа:"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изменить статус заказа"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"/>
        <Spinner
            android:id="@+id/statuses_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </Spinner>
    <Button
        android:id="@+id/save_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/purple_700"
        android:layout_marginTop="50dp"
        android:text="Сохранить" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>